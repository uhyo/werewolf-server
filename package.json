{
  "name": "werewolf-server",
  "version": "0.0.1",
  "description": "Are you a WEREWOLF?",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all clean build:tsc lint build:client",
    "build:client": "webpack",
    "build:tsc": "tsc",
    "clean": "rimraf dist",
    "lint": "find keeper/ db/ front/ client/ -name \"*.ts\" | xargs tslint --force",
    "start": "node dist/front/server",
    "watch": "npm-run-all --parallel watch:*",
    "watch:client": "webpack-dev-server",
    "watch:lint": "watch 'npm run lint' keeper/ db/ front/ client/ --wait=0.3 --verbose",
    "watch:tsc": "tsc --watch"
  },
  "keywords": [
    "werewolf"
  ],
  "author": "uhyo",
  "license": "MIT",
  "dependencies": {
    "config": "^1.21.0",
    "ejs": "^2.5.2",
    "eventemitter3": "^2.0.0",
    "express": "^4.14.0",
    "express-ws": "^2.0.0",
    "js-yaml": "^3.6.1",
    "node-ipc": "^8.1.1",
    "redis": "^2.6.2"
  },
  "devDependencies": {
    "@types/config": "0.0.29",
    "@types/eventemitter3": "0.0.28",
    "@types/express": "^4.0.32",
    "@types/react": "^0.14.34",
    "@types/react-dom": "^0.14.16",
    "@types/react-redux": "^4.4.31",
    "@types/redis": "^0.12.31",
    "@types/redux": "^3.5.29",
    "@types/ws": "0.0.30",
    "npm-run-all": "^3.1.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "tslint": "^3.15.1",
    "typescript": "^2.0.0",
    "watch": "^0.19.2",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.2"
  }
}
