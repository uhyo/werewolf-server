{
  "name": "werewolf-server",
  "version": "0.0.1",
  "description": "Are you a WEREWOLF?",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all clean build:sass build:tcm build:tsc-client build:tsc-server lint build:bundle",
    "build:bundle": "webpack",
    "build:sass": "node-sass --output dist-client/sass client/sass",
    "build:tcm": "tcm -o dist-ts/client/sass dist-client/sass",
    "build:tsc-client": "tsc --project tsconfig-client.json",
    "build:tsc-server": "tsc --project tsconfig-server.json",
    "clean": "rimraf dist-server dist-ts dist-client dist-web",
    "lint": "find server/ client/ -name \"*.ts\" | xargs tslint --force",
    "start": "node dist-server/front/server",
    "watch": "npm-run-all build --parallel watch:*",
    "watch:bundle": "webpack-dev-server",
    "watch:lint": "watch 'npm run lint' server/ client/ --wait=0.3 --verbose",
    "watch:sass": "node-sass --watch --output dist-client/sass client/sass ",
    "watch:tcm": "tcm --watch -o dist-ts/client/sass dist-client/sass",
    "watch:tsc-client": "tsc --watch --project tsconfig-client.json",
    "watch:tsc-server": "tsc --watch --project tsconfig-server.json"
  },
  "keywords": [
    "werewolf"
  ],
  "author": "uhyo",
  "license": "MIT",
  "dependencies": {
    "config": "^1.21.0",
    "ejs": "^2.5.2",
    "eventemitter3": "^2.0.0",
    "express": "^4.14.0",
    "express-ws": "^2.0.0",
    "js-yaml": "^3.6.1",
    "node-ipc": "^8.1.1",
    "redis": "^2.6.2",
    "werewolf-core": "0.0.1"
  },
  "devDependencies": {
    "@types/config": "0.0.29",
    "@types/eventemitter3": "0.0.28",
    "@types/express": "^4.0.32",
    "@types/react": "^0.14.34",
    "@types/react-addons-shallow-compare": "^0.14.16",
    "@types/react-dom": "^0.14.16",
    "@types/react-redux": "^4.4.31",
    "@types/redis": "^0.12.31",
    "@types/redux": "^3.5.29",
    "@types/ws": "0.0.30",
    "css-loader": "^0.25.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "node-sass": "^3.10.0",
    "npm-run-all": "^3.1.0",
    "react": "^15.3.1",
    "react-addons-shallow-compare": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "style-loader": "^0.13.1",
    "tslint": "^3.15.1",
    "typed-css-modules": "^0.1.12",
    "typescript": "^2.0.0",
    "watch": "^0.19.2",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.2"
  }
}
