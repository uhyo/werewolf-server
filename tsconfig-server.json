{
    "compilerOptions":{
        "lib": ["dom", "es5", "es2015.core", "es2015.promise", "es2015.collection"],
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "strictNullChecks": true,
        "module":"commonjs",
        "target":"es5",
        "rootDirs": ["server/", "dist-ts/", "shared/"],
        "outDir":"dist-server/",
        "jsx":"react"
    },
    "include":[
        "server/db/**/*.ts", "server/keeper/**/*.ts", "server/front/**/*.ts",
        "dist-ts/**/*.ts",
        "shared/**/*.ts"
    ],
    "exclude":[
        "node_modules"
    ]
}



